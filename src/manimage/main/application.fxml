<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import manimage.main.DynamicImageGridPane?>
<?import manimage.main.DynamicImageView?>

<SplitPane dividerPositions="1.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           orientation="VERTICAL" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.112"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="manimage.main.MainController">
    <items>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#addFilesClicked" text="Add File(s)"/>
                        <MenuItem mnemonicParsing="false" onAction="#addFolderClicked" text="Add Folder"/>
                        <MenuItem mnemonicParsing="false" onAction="#addRecurseFolderClicked"
                                  text="Add Folders Recursively"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#exitClicked" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#aboutMenuActivated" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.5">
            <items>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                    <items>
                        <BorderPane>
                            <center>
                                <manimage.main.DynamicImageView fx:id="previewDynamicImageView" pickOnBounds="true"
                                                                BorderPane.alignment="CENTER"/>
                            </center>
                        </BorderPane>
                        <Label fx:id="previewTagsLabel" text="Tags">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                    </items>
                </SplitPane>
                <ScrollPane fx:id="gridScrollPane" fitToWidth="true" hbarPolicy="NEVER" maxHeight="Infinity"
                            maxWidth="-Infinity" minHeight="150.0" minViewportWidth="485.0" minWidth="-Infinity"
                            prefViewportWidth="485.0" prefWidth="638.0" vbarPolicy="ALWAYS">
                    <content>
                        <DynamicImageGridPane fx:id="grid" hgap="5.0" onMouseClicked="#gridMouseClicked" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="150.0"
                                                   prefWidth="150.0"/>
                                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="150.0"
                                                   prefWidth="150.0"/>
                                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="150.0"
                                                   prefWidth="150.0"/>
                                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="150.0"
                                                   prefWidth="150.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="150.0" minHeight="150.0" prefHeight="150.0"
                                                valignment="CENTER" vgrow="NEVER"/>
                                <RowConstraints maxHeight="150.0" minHeight="150.0" prefHeight="150.0"
                                                valignment="CENTER" vgrow="NEVER"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </DynamicImageGridPane>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </items>
</SplitPane>
